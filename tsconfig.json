{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "lib": ["esnext"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "target": "es2018",
  },
  "include": ["./**/*.ts", "serverless.txt"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "__tests__"
  ]
}
