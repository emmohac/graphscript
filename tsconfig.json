{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es2020"],
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "target": "es2020",
    "outDir": "lib"
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "__tests__/**/*"
  ]
}
